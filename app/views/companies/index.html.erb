<h1>Listing companies</h1>

<table>
  <tr class="evenRow">
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Country</th>
    <th>Category Group</th>

  </tr>

  <% @companies.each do |company| %>
    <tr class="<%= cycle('oddRow', 'evenRow') %>">
      <td><%= company.name %></td>
      <td><%= company.address %></td>
      <td><%= company.city_name %></td>
      <td><%= company.state.name  if company.state%> &nbsp;</td>
      <td><%= company.country.name if company.country%> &nbsp;</td>
      <td><%= company.business_group.title  if company.business_group%></td>
      <td><%= link_to 'Show', company %></td>
      <td><%= link_to 'Edit', edit_company_path(company) %></td>
      <td><%= link_to 'Destroy', company, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

