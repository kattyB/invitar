                      </div>
                    </div>

                    <div style="margin-top: 10px;">

                      <div class="row">

                        <label>Title</label>

                        <%= f.text_field :title, :class => "text" %>
                      </div>

                      <div class="row" style="margin-left: 41px; margin-top: 5px;">

                        <%= f.text_area :description, :style => "height: 50px; " %>

                      </div>

                      <%= f.hidden_field :from, :value => current_user.id   %>
                      <%= f.hidden_field :to, :value => @quote.user_id %>
                      <% if(@message_cont != nil) %>
                      <%= f.hidden_field :parent, :value => @message_cont.id %>
                      <%else%>
                      <% if @responses.length != nil  %>
                        <%= f.hidden_field :parent, :value => @responses.id %>
                      <% else %>
                        <%= f.hidden_field :parent, :value => 0 %>
                      <% end %>
                      <%end%>
                      <%= f.hidden_field :is_new, :value => true %>
                      <%= f.hidden_field :csolicitude_id, :value => @company_solicitude.id %>

                      <div class="row" style="margin-left: 41px; margin-top: 5px;">

                        <%= f.submit "Reply", :style => "margin-left: 550px"%>

                      </div>

                    </div>
                  <%end%>
                </div>

              </div>
            </div>

