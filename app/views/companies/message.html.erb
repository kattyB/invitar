              <div style="background-image: url('/images/topcrv.png'); width: 924px; height: 10px; margin-top: 33px;"></div>

              <div class="tab_container">



                <div id="tab1" class="tab_content">
                  <div style="margin-bottom: 8px;"><strong>Solicitude for: <%= @solicite.solicitude %></strong></div>

                  <div class="message">

                    <div style="margin-top: 5px; margin-bottom: 5px;">

