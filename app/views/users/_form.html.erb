<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div id="errorExplanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <div class="det_midRep">
    <div class="row">
      <label>First Name:</label>
      <%= f.text_field :firstname, :class=> 'text' %>
    </div>
    <div class="row">
      <label>Last Name:</label>
      <%= f.text_field :lastname, :class=> 'text' %>
    </div>

    <div class="row">
      <label>Email Address:</label>
      <%= f.text_field :email, :class=> 'text' %>
    </div>

    <div class="row">
      <label>Password:</label>
      <%= f.password_field :password, :class=> 'text' %>
    </div>
    <div class="row">
      <label>Re-type Password:</label>
      <%= f.password_field :password_confirmation, :class=> 'text' %>
    </div>

    <div class="rowBtn" style="text-align: center">
      <%= image_submit_tag '/images/submit_signup.png', :name=>'submit' %>
    </div>

  </div>
<% end  %>

