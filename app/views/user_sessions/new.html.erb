<% title "Login" %>

<div class="dashbord">
  <div class="dashbord_tCrv">
    <!---->
  </div>
  <div class="dashbord_mRepeat">
    <div class="midshade">
      <ul class="language">
        <li>
          <a class="english" href="javascript:change_Language('en');">English</a>
        </li>
        <li>
          <a class="spanish" href="javascript:change_Language('es');">Espanol</a>
        </li>
      </ul>            <ul>
        <li class="first">


          <div class="title">
            <h2>Login</h2>

          </div>
        </li>
        <li>
          <div class="details">
            <ul>
              <li>
                <div class="det_topcrv">
                  <!---->
                </div>
                <% form_for @user_session, :url => user_session_path do |f| %>

                  <div class="det_midRep">
                    <div style="margin: 10px;padding: 10px;float: left;">
                      <%= errors_for(@user_session, "Opps, unable to add sign in").html_safe %>
                    </div>                    
                    <div class="row">
                      <label>Email Address</label>
                      <%= f.text_field :email, :class => 'text',  :style=>'height:40px; font-size:28px' %>
                    </div>
                    <div class="row">
                      <label>Password</label>
                      <%= f.password_field :password, :class => 'input_password',  :style=> 'height:40px; font-size:26px' %>
                    </div>
                    <div class="row">
                      <label>Remember me <%= f.check_box :remember_me %></label>

                    </div>

                    <div class="rowBtn">
                      <%= hidden_field_tag :event_id, params[:event_id] %>
                      <%= hidden_field_tag :g_id, params[:g_id] %>
                      <%= hidden_field_tag :invite_friend, params[:invite_friend] %>
                      <%= image_submit_tag  '/images/loginbtn.png'%>
                    </div>
                    <div style="padding: 10px 0pt 0pt 20px;" class="row">
                      <span class="label">If you not remember your password, please go to the
                        <%= link_to 'Forgot Password', new_password_reset_url %>
                      </span>
                    </div>
                  </div>
                <% end %>
                <div class="det_botcrv">
                  <!---->
                </div>
              </li>
            </ul>
          </div>
          <div class="sidelink">
            <ul><b style="font-size: 18px; padding: 0pt 0pt 5px 10px;">Not a member Yet ?</b><li>
                <%= link_to 'Create an account Now !', new_user_path %>
              </li>
              <script type="text/javascript" src="http://static.ak.connect.facebook.com/js/api_lib/v0.4/FeatureLoader.js.php/en_US"></script>

            </ul>
          </div>

        </li>
      </ul>
    </div>
  </div>
  <div class="dashbord_bCrv"></div>
</div>
<style type="text/css">
  #frame .dashbord .dashbord_mRepeat .midshade ul li .details ul li .det_midRep .row label {
    color:#777777;
    float:left;
    font-family:Verdana,Geneva,sans-serif;
    font-size:22px;
    font-weight:bold;
    height:28px;
    line-height:28px;
    width:550px;
  }
</style>