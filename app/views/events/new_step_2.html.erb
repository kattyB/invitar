<script type="text/javascript" >
  $(document).ready(function(){
    var cur_lan = '<%=current_lang.to_s%>';

    $('#settings_allow_guests_to_bring_people').click(function(){
       $(this).disableMaxGuest($(this).attr('checked'));
    });

    $('#settings_event_reminder').click(function(){
       $(this).disableReminderOptions($(this).attr('checked'));
    });

    $(this).disableMaxGuest($('#settings_allow_guests_to_bring_people').attr('checked'));

    $(this).disableReminderOptions($('#settings_event_reminder').attr('checked'));
    
    $(this).showHideLangOption(cur_lan);
    $('a#en_event_info').click(function(){
      $(this).showHideLangOption('en');
    });

    $('a#es_event_info').click(function(){
      $(this).showHideLangOption('es');
    });

    $('#skip_step').click(function(){
      $('#skip_step2').val(1);
      $('#event_form').submit();
    });

    $('#save_n_continue, #update_info').click(function(){
      $('#event_form').submit();
    });

    $('#event_date').datepicker();
    

  });

  $.fn.disableMaxGuest = function(state){
    if(state)
      $('#max_people_to_bring').removeAttr('disabled');
    else
      $('#max_people_to_bring').attr('disabled', 'disabled');
  }

  $.fn.disableReminderOptions = function(state){
    if(state)
      $('#reminder_days, #settings_reminder_yes, #settings_reminder_maybe, #settings_reminder_no_reply').removeAttr('disabled');
    else
      $('#reminder_days, #settings_reminder_yes, #settings_reminder_maybe, #settings_reminder_no_reply').attr('disabled', 'disabled');
  }

  $.fn.showHideLangOption = function(p_cur_lan){
    if(p_cur_lan == 'en'){
      $('.row_es').hide();
      $('.label_es').hide();
      $('.label_es p').hide();
      $('.row_en').show();
      $('.label_en').show();
      $('.label_en p').show();
    }
    else{
      $('.row_en').hide();
      $('.label_en').hide();
      $('.label_en p').hide();
      $('.row_es').show();
      $('.label_es').show();
      $('.label_es p').show();
    }
  };
  $('#event_form :checkbox').attr('checked', true)
</script>