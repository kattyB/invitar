<%= render :partial => "tab_menus", :locals => {:event => @event} %>

<br/>
<br/>
<% title 'Choose your design' %>
<h1>Choose your Design</h1>
<%= render 'shared/step_progress' %>

<%= form_for(@event, :url => new_step_2_path) do |f| %>
  <% if @event.errors.any? %>
  <div id="errorExplanation">
    <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
    <ul>
    <% @event.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <% end %>

  <%#= render :partial => 'form_fields', :locals => {:f => f} %>


  <div class="field">
    <%= f.label :country %><br />
    <%= f.select :country, @countries %>
  </div>

  <div class="field">
    <%= f.label :category %><br />
    <%= f.select :category, @categories %>
  </div>

  <%= f.fields_for :design do |df| %>
    <div class="field">
      <%= df.label :name, "Design" %><br />
      <%= df.text_field :caption %>
    </div>
  <% end %>

  <div class="actions">
    <%= submit_tag "Continue" %>
  </div>

<% end %>